
@model IEnumerable<InventoryTask.Models.CustomerReportMonthwise>


@{
    ViewBag.Title = "MonthwiseCustomerReportwithProducts";
}

<h2>Monthwise Customer Report with Products</h2>

<table id="2" class="table">
    <tr>
        <th>Month</th>
        <th>Customer</th>
        <th>Amount</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Date.Date.Value.ToString("MMMM")- @item.Date.Date.Value.Year</td>
    <td>@item.CustomerName.Name</td>
    <td>@item.Amount.Amount</td>

</tr>
    }
</table>